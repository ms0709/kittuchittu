@page "/counter"
@rendermode InteractiveServer
@inject NavigationManager nm
<PageTitle>Counter</PageTitle>

<h1>Counter</h1>



<button class="btn btn-primary" @onclick="IncrementCount">+</button>
<p role="status">Current count: @currentCount</p>
<button class="btn btn-danger" disabled="@isEnable"@onclick="DecrementCount">-</button>
<button class="btn btn-warning"@onclick="Navigation">Kittu Chittu</button>

@code {
    public bool isEnable=true; 
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
        if (currentCount > 0)
        {
            isEnable = false;
        }
    }
    private void DecrementCount()
    {
        currentCount--;
        if (currentCount <= 0)
        {
            isEnable = true;
        }
    }

    void Navigation()
    {
        nm.NavigateTo("/KittuChittu");

    }
}
